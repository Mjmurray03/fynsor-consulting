# =============================================================================
# FYNSOR CONSULTING - VERCEL DEPLOYMENT ENVIRONMENT VARIABLES
# =============================================================================
# This file contains the environment variables required for Vercel deployment.
# Copy this file to .env.local for local development.
# Set these variables in your Vercel dashboard for production deployment.
# =============================================================================

# =============================================================================
# VERCEL CONFIGURATION
# =============================================================================
VERCEL_ENV=production
NEXT_TELEMETRY_DISABLED=1
NODE_ENV=production

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://fynsor.com
NEXT_PUBLIC_API_URL=https://fynsor.com/api
NEXT_PUBLIC_APP_NAME=Fynsor Consulting

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =============================================================================
# Supabase Database URL
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth Secret (Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=https://fynsor.com

# Session Configuration
SESSION_SECRET=your-session-secret-key-minimum-32-characters

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret

# GitHub OAuth (for developer access)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration for transactional emails
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@fynsor.com
SENDGRID_FROM_NAME=Fynsor Consulting

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id
SENTRY_ORG=fynsor
SENTRY_PROJECT=fynsor-consulting
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# LogRocket Session Replay
NEXT_PUBLIC_LOGROCKET_APP_ID=your-logrocket-app-id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Security Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-for-tokens

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# IP Whitelisting (comma-separated)
IP_WHITELIST_ENABLED=false
ALLOWED_IPS=192.168.1.100,10.0.0.50

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================
# GDPR/CCPA Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
PRIVACY_POLICY_URL=https://fynsor.com/privacy
TERMS_OF_SERVICE_URL=https://fynsor.com/terms

# Cookie Consent
COOKIE_CONSENT_ENABLED=true
COOKIE_DOMAIN=.fynsor.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for deployment
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_CONTACT_FORM_ENABLED=true
NEXT_PUBLIC_NEWSLETTER_ENABLED=true
NEXT_PUBLIC_LIVE_CHAT_ENABLED=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_KEY_REQUIRED=false

# External API Keys
HUBSPOT_API_KEY=your-hubspot-api-key
CALENDLY_API_KEY=your-calendly-api-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# AWS S3 for Backups (if using)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=fynsor-backups

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug Configuration
DEBUG=false
LOG_LEVEL=info
ENABLE_LOGGING=true

# Development Tools
STORYBOOK_ENABLED=false
TESTING_ENABLED=true

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook secrets for external integrations
WEBHOOK_SECRET_STRIPE=whsec_your-stripe-webhook-secret
WEBHOOK_SECRET_GITHUB=your-github-webhook-secret
WEBHOOK_SECRET_HUBSPOT=your-hubspot-webhook-secret

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis Configuration (if using external cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cache Settings
CACHE_TTL=3600
STATIC_CACHE_TTL=86400

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_CHANNEL=#notifications

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================
# CMS Configuration (if using headless CMS)
CMS_API_URL=https://api.contentful.com/spaces/your-space-id
CMS_ACCESS_TOKEN=your-cms-access-token
CMS_PREVIEW_TOKEN=your-cms-preview-token

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_BUDGET_JS=500000
PERFORMANCE_BUDGET_CSS=100000

# Web Vitals Monitoring
WEB_VITALS_ENABLED=true
WEB_VITALS_ENDPOINT=/api/web-vitals

# =============================================================================
# DEPLOYMENT INFORMATION
# =============================================================================
# Build Information (automatically set by Vercel)
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=
VERCEL_GIT_COMMIT_AUTHOR_NAME=
VERCEL_GIT_REPO_SLUG=
VERCEL_GIT_REPO_OWNER=

# =============================================================================
# INSTRUCTIONS FOR SETUP
# =============================================================================
# 1. Copy this file to .env.local for local development
# 2. Replace all placeholder values with actual credentials
# 3. Set these variables in your Vercel dashboard for production
# 4. Never commit actual secrets to version control
# 5. Use Vercel's environment variable management for production
# 6. Regularly rotate sensitive credentials
# 7. Use different values for development, staging, and production
# =============================================================================